<h4 class="m-b">Add Post</h4>

<%= form_for @post, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Post title', autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5, placeholder: 'Write Post', class: 'form-control' %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3">
        <%= f.submit 'Save', class: 'btn btn-success btn-block' %>
      </div>

      <div class="col-sm-2">
        <%= link_to 'Discard', posts_path, class: 'btn btn-secondary btn-block' %>
      </div>
    </div>
  </div>
<% end %>
